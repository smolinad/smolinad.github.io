---
interface Props {
    title: string, 
    description: string,
    link: string
}

const { title, description, link } = Astro.props;
---

<a href={link} target="_blank" class="flex flex-col justify-center items-center w-full rounded-lg shadow-sm md:flex-row dark:bg-black-600 dark:hover:bg-black-700">
    <div class="flex flex-col justify-between p-8 leading-normal">
        <h5 class="mb-2 text-xl font-bold tracking-tight text-main">{title}</h5>
        <p class="mb-2 font-normal text-white dark:text-white">{description}</p>
    </div>
</a>
